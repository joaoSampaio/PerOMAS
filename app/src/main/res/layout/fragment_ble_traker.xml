<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView
        android:id="@+id/txtLabelUpload"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="16dp"
        android:text="Just a demo to display beacons found by the app, and shows the ids, and distance"/>
    
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabelUpload"
        android:src="@drawable/ic_bluetooth"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/scanble"
        android:background="@drawable/btn_scan"
        android:text="Press to enable"
        android:paddingTop="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listBeacons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@color/list_divider_white"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_row_selector"
        android:layout_above="@+id/scanble"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
